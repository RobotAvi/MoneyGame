<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.FinancialSuccess" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Customize your theme here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>
    
    <!-- Custom Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Custom Button Style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Money text styles -->
    <style name="TextAppearance.App.Money" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.App.Money.Positive">
        <item name="android:textColor">@color/success_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Money.Negative">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>