<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Иконка категории -->
        <TextView
            android:id="@+id/tv_category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="💼"
            android:textSize="20sp" />

        <!-- Основная информация -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Название категории и сумма -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Зарплата"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+50,000₽"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_color" />

            </LinearLayout>

            <!-- Описание -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Зарплата за месяц"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_color" />

            <!-- Время, возраст и месяц -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14.07 15:30 • 25 лет"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text_color" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Месяц 1"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text_color" />

            </LinearLayout>

            <!-- Баланс после операции -->
            <TextView
                android:id="@+id/tv_balance_after"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Баланс: 55,000₽"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/secondary_text_color" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>