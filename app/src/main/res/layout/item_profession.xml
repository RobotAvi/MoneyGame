<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_profession"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:checkable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_profession_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Профессия"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_profession_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание профессии"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Зарплата: 0 ₽"
                    android:textSize="12sp"
                    android:textColor="@color/success_color" />

                <TextView
                    android:id="@+id/tv_expenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Расходы: 0 ₽"
                    android:textSize="12sp"
                    android:textColor="@color/error_color" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_education"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Образование"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>